{
  "compilerOptions": {
    "lib": ["ES2022"],
    "module": "ESNext",
    "noEmit": false,
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": false,
    "outDir": "./dist",
    "declarationDir": "./types",
  },
  "include": [
    "src"
  ],
  "exclude": ["node_modules", "dist"]
}
